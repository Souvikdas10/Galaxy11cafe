<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title><%=title%></title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
        <link href="/css/styles.css" rel="stylesheet" />
        <link href="/css/edit.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>




    </head>
    <body class="sb-nav-fixed">
        <%-include('common/topbar')%>
            <div id="layoutSidenav">
                <%-include('common/sidebar')%>
                    <div id="layoutSidenav_content">
                        <%if(message.length>0){%>
                            <div class="alert alert-success" role="alert">
                                <%=message%>
                              </div>
                              <%}%>
                        
                              <%if(error.length>0){%>
                                <div class="alert alert-danger" role="alert">
                                    <%=error%>
                                  </div>
                                  <%}%>
                        <main>
                            <div class="container-fluid px-4">
                                <h1 class="mt-4">edit</h1>
                            <div class="container">
                                <div class="card-header py-3">
                                    <div class="modal-body">
                                        <form action="/admin/update" method="post"
                                            enctype="multipart/form-data">
                                            <input type="hidden" name="pId" value="<%=editData._id%>">

                                            <div class="form-group">
                                                <label class="col-form-label">Product Name:</label>
                                                <input type="text" class="form-control" name="product_name"
                                                    value="<%=editData.product_name%>" placeholder="Item Name">
                                            </div>
                                            <div class="form-group">
                                                <label class="col-form-label">Description:</label>
                                                <input type="text" class="form-control" name="description"
                                                    value="<%=editData.description%>"
                                                    placeholder="Item Details" >
                                            </div>
                                            <div class="form-group">
                                                <label class="col-form-label">Price:</label>
                                                <input type="text" class="form-control" name="price" value="<%=editData.price%>"
                                                    placeholder="Item Price">
                                            </div><br><br>
                                            <div class="form-group">
                                                <label class="col-form-label">Image:</label><br>
                                                <!-- <input type="file" class="form-control" name="image" value="<%=editData.image%>" > <br> -->
                                                <img src="/<%=editData.image%>" alt="image" height="100px" width="200px">
                                            </div>

                                            <div class="modal-footer form-group">
                                                <label class="col-form-label"></label>
                                                <!-- <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Close</button> -->
                                                <input type="submit" class="btn btn-primary" value="Update">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                    </div>
                    </div>
            </div>
            <%-include('common/footer')%>

    </body>    